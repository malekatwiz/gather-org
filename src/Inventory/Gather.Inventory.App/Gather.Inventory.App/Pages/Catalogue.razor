@page "/catalogue"
<h3>Catalogue</h3>

@if (_products?.Count == 0)
{
    <p><em>Loading...</em></p>
}
else
{
    @for (var i = 0; i < _products.Count; i += 3)
    {
        <div class="row">
            @for (var j = i; j < i + 3 && j < _products.Count; j++)
            {
                var product = _products[j];
                <div class="card mb-3" style="width: 18rem;">
                    <img src="@product.DefaultImage" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">@product.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@product.BarCode</h6>
                        <p class="card-text">@product.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">@product.Category</li>
                            <li class="list-group-item">@product.Brand</li>
                            <li class="list-group-item">@product.Weight</li>
                            <li class="list-group-item">@product.Size</li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <input class="form-check-input" type="radio">
                    </div>
                </div>
            }
        </div>
    }
}

